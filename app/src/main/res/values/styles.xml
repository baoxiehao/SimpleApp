<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Startup">
        <item name="android:windowBackground">@drawable/bg_start_window</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Light" parent="ThemeOverlay.AppCompat.Light"></style>
    <style name="AppTheme.Dark" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="AppTheme.Dark.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>
